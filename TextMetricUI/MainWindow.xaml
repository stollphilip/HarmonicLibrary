<Window x:Class="TextMetricUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextMetricUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="1060" Width="800">
    <StackPanel>
        <TextBox x:Name="textBox" TextChanged="textBox_TextChanged"/>
        <ComboBox x:Name="comboBox" DisplayMemberPath="Text"  Width="100" SelectionChanged="comboBox_SelectionChanged" />
        <StackPanel Orientation="Horizontal">
            <Label Content="Font Size" Width="70"/>
            <Slider x:Name="fontSize" Maximum="554" Value="12" Width="512" ValueChanged="fontSize_ValueChanged" AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="0" />
            <Label x:Name="fontSizeLabel" Width="70"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Margin Left" Width="70"/>
            <Slider x:Name="marginLeft" Maximum="256" Value="0" Minimum="-512" Width="512" ValueChanged="marginLeft_ValueChanged" AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="0" />
            <Label x:Name="marginLeftLabel" Width="70"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Margin Top" Width="70"/>
            <Slider x:Name="marginTop" Maximum="256" Value="0" Minimum="-512" Width="512" ValueChanged="marginTop_ValueChanged" AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="0" />
            <Label x:Name="marginTopLabel" Width="70"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="formattedText" Content="Format Text" Width="125" />
            <CheckBox x:Name="checkBox" Content="Add Text" IsChecked="True" />
        </StackPanel>
        <Grid x:Name="grid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Rectangle Grid.Row="0" Grid.Column="0" Fill="LightGray"/>
            <Rectangle Grid.Row="0" Grid.Column="1" Fill="LightGray"/>
            <Rectangle Grid.Row="0" Grid.Column="2" Fill="LightGray"/>

            <Rectangle Grid.Row="0" Grid.Column="3" Fill="LightGray"/>
