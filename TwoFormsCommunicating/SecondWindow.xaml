<Window x:Class="TwoFormsCommunicating.SecondWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwoFormsCommunicating"
        mc:Ignorable="d"
        Title="SecondWindow" Height="450" Width="800">
    <Window.InputBindings>
        <KeyBinding Key="M" Modifiers="Control" Command="{Binding ActivateWindowCommand}"/>
    </Window.InputBindings>
    <Grid>
        <Button x:Name="button" Content="Send Message" Width="100" Height="24" Click="button_Click"/>
    </Grid>
</Window>
